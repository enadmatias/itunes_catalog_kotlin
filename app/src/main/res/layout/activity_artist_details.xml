<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ArtistDetailsActivity">


    <RelativeLayout
        android:id="@+id/videoView"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints">

        <VideoView
            android:id="@+id/trailerVideo"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentLeft="true" />

    </RelativeLayout>

    <TextView
        android:id="@+id/titleTXT"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/default_dimen"
        android:paddingStart="@dimen/dimen_15"
        android:paddingLeft="@dimen/dimen_15"
        android:text="Sample"
        android:textSize="24sp"
        android:fontFamily="@font/montserrat_bold"
        android:textColor="@color/black"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/videoView"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/artistNameTXT"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="@dimen/headingSmall"
        android:fontFamily="@font/montserrat"
        android:paddingStart="@dimen/dimen_15"
        android:paddingLeft="@dimen/dimen_15"
        android:text="Artist Name"
        app:layout_constraintTop_toBottomOf="@+id/titleTXT"
        tools:layout_editor_absoluteX="0dp" />


    <TextView
        android:id="@+id/descriptionTXT"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="350dp"
        android:fontFamily="@font/montserrat"
        android:textSize="@dimen/headingMedium"
        android:paddingLeft="@dimen/dimen_15"
        android:paddingRight="@dimen/dimen_15"
        app:layout_constraintTop_toBottomOf="@+id/artistNameTXT"
        tools:layout_editor_absoluteX="0dp" />

</androidx.constraintlayout.widget.ConstraintLayout>